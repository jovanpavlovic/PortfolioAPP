<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfoliopage_url %>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfoliopage_path(portfolio_item) %></p><!--naslov za edit-->
  <p><%= portfolio_item.subtitle %></p>
  <p><%=portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %><!--alternativa unless koju rubi omogucuje, moze se koristiti i if. Pojavljivanje portfolija iako nema sliku-->
  <%= link_to "Edit", edit_portfoliopage_path(portfolio_item)%><!--edit za svaki portfolio, hvata id-->
<% end %> <!--blok, ponovice se 9 puta, imamo 9 portfolio item-a-->